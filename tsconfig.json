{
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
          "@/*": [
            "*"
          ],
          "test/*": [
            "test/*"
          ]
        },
        "outDir": "./dist/",
        "noImplicitAny": true,
        "allowJs": true,
        "module": "commonjs",
        "target": "es2016",
        "lib": ["es2017", "es2015", "dom", "es6"],
        "jsx": "preserve",
        "sourceMap": true,
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}